{
  "name": "搜索拐杖",
  "version": "3.0",
  "description": "在Google，百度，必应等等搜索引擎间进行快捷切换，搜索关键词无需重输！",
  "update_url": "http://www.kkksou.com/product/gc_update.xml",
  "background" : { "scripts": ["js/background.js", "js/base.js"] },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "page_action" :
  {
    "default_icon" : "img/icon-16.png",
    "default_title" : "点此切换搜索",
	"default_popup": "popup.html"
  },
  "permissions" : [
    "tabs","*://*/*"
  ],
  "options_page": "options.html",
  "content_scripts" : [
	{
      "matches" : [
        "http://www.google.com.hk/*",
		"http://www.google.com/*"
      ],
      "js" : ["js/toGoogleFinish.js","js/sendword.js"],
      "run_at" : "document_end"
    },
	{
      "matches" : [
        "http://www.baidu.com/*"
      ],
      "js" : ["js/toBaidu.js","js/sendword.js"],
      "run_at" : "document_end"
    },
	{
      "matches" : [
        "http://www.sogou.com/*"
      ],
      "js" : ["js/toSogou.js","js/sendword.js"],
      "run_at" : "document_end"
    },
	{
      "matches" : [
        "http://www.yahoo.cn/*","http://www.youdao.com/*"
      ],
      "js" : ["js/toYahoo.js","js/sendword.js"],
      "run_at" : "document_end"
    }
  ],
  "icons" : {
    "16" : "img/icon-16.png",
    "48" : "img/icon-48.png",
    "128" : "img/icon-128.png"
  },
  "manifest_version": 2
}
