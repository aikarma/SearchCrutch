{
  "name": "Google搜索拐杖",
  "version": "2.3",
  "description": "如果Google搜索不通，快捷切换到其他搜索。Google抽风我帮忙！",
  "update_url": "http://www.kkksou.com/product/gc_update.xml",
  "background_page": "background.html",
  "page_action" :
  {
    "default_icon" : "gcrutch.19.gif",
    "default_title" : "点此切换搜索",
	"default_popup": "popup.html"
  },
  "permissions" : [
    "tabs","*://*/*"
  ],
  "options_page": "options.html",
  "content_scripts" : [
	{
      "matches" : [
        "http://www.google.com.hk/*",
		"http://www.google.com/*"
      ],
      "js" : ["toGoogleFinish.js","sendword.js"],
      "run_at" : "document_end"
    },
	{
      "matches" : [
        "http://www.baidu.com/*"
      ],
      "js" : ["toBaidu.js","sendword.js"],
      "run_at" : "document_end"
    },
	{
      "matches" : [
        "http://www.sogou.com/*"
      ],
      "js" : ["toSogou.js","sendword.js"],
      "run_at" : "document_end"
    },
	{
      "matches" : [
        "http://www.yahoo.cn/*","http://www.youdao.com/*"
      ],
      "js" : ["toYahoo.js","sendword.js"],
      "run_at" : "document_end"
    }
  ],
  "icons" : {
    "48" : "gcrutch.48.gif",
    "128" : "gcrutch.128.png"
  }
}
